include /src/components/color-example/color-example.pug
include /src/components/header/header.pug

-
    var colorExamples = [
        {
            name: 'Dark Shade 100%',
            code: '#1F2041'
        },
        {
            name: 'Dark Shade 75%',
            code: '#1F2041BF'

        },
        {
            name: 'Dark Shade 50%',
            code: '#1F204180'

        },
        {
            name: 'Dark Shade 25%',
            code: '#1F204140'
        },
        {
            name: 'Dark Shade 5%',
            code: '#1F20410D'

        },
        {
            name: 'Purple',
            code: '#BC9CFF'

        },
        {
            name: 'Green',
            code: '#6FCF97'

        }
    ]

.colors-and-type
    include /src/components/logo/logo.pug

    .colors
        each example in colorExamples 
            +color-example(example.name, example.code)

    .text
        .justify-self-end
            +header({type: 'h1', text: 'H1', opacity: '25'})
        +header({type: 'h1', text: 'This one is the sub-section or widget title'})

        .justify-self-end
            +header({type: 'h2', text: 'H2', opacity: '25'})
        +header({type: 'h2', text: 'Next one is the item title inside widgets'})

        .justify-self-end
            +header({type: 'h3', text: 'H3', opacity: '25'})
        +header({type: 'h3', text: 'This is a label or CTA text'})

        .justify-self-end
            span Body
        span This is the body text which is used for most of the design, like paragraphs, lists, etc.
